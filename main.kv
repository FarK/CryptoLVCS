#:kivy 1.0.9

<MainWidget>:
	algorithm: id_algorithm
	secret_image: id_secret_image
	parameters: id_parameters 

	BoxLayout:
		orientation: 'vertical'

		StackLayout:
			orientation: 'lr-tb'
			size_hint: 1, 0.1

			Spinner:
				size_hint:0.3,1
				id: id_algorithm
				text: "Select Algorithm"
				values: "LVCS-DVCS",""

			Spinner:
				size_hint:0.3,1
				id: id_parameters
				text: "Parameters"
				values: "(2,2)","(2,3)","(3,3)"
			
			Button:
				size_hint:0.3,1
				id: id_loadImageButton
				text: "Load secret"
				on_press: root.show_load()


		Image:
			id: id_secret_image
			source: "image.gif"
		
		Button:
			size_hint: 1, 0.1
			text: "Generate"
			on_press: root.generateShadows()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
