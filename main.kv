#:kivy 1.0.9

<MainWidget>:
	algorithm: id_algorithm
	n: id_n
	k: id_k
	m: id_m
	imageSource: id_loadImageText

	BoxLayout:
		orientation: 'horizontal'

		BoxLayout:
			orientation: 'vertical'
			size_hint: 0.5, 1

			Spinner:
				id: id_algorithm
				size_hint: 1, 0.1
				text: "Select Algorithm"
				values: "LVCS", "PVCS", "DVCS"

			GridLayout:
				cols: 2
				size_hint: 1, None
				
				Label: 
					text: "n"
				TextInput:
					id: id_n
					multiline: False
				Label: 
					text: "k"
				TextInput:
					id: id_k
					multiline: False
				Label: 
					text: "m"
				TextInput:
					id: id_m
					multiline: False

			Button:
				size_hint: 1, 0.1
				text: "Generate shadows"
				on_press: root.generateShadows()

			BoxLayout:
				orientation: 'horizontal'
				size_hint: 1, 0.1

				Button:
					id: id_loadImageButton
					text: "Load Image"
					on_press: root.loadImage(id_loadImageText.text)

				TextInput:
					id: id_loadImageText
					text: "image.gif"
					multiline: False

			GridLayout:
				size_hint: 0.5, 1
				cols: 2

				Label:
					text: "1"
				CheckBox:

				Label:
					text: "2"
				CheckBox:

				Label:
					text: "3"
				CheckBox:
			
				Label:
					text: "4 (esto se tiene q autogenerar)"
				CheckBox:

		Image:
			source: "image.gif"

		Image:
			source: "image.gif"
