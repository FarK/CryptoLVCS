#:kivy 1.0.9

<MainWidget>:
	algorithm: id_algorithm
	secret_image: id_secret_image
	parameters: id_parameters
	shades: id_shades
	result_image: id_result
	canvas:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos:self.pos
			size:self.size 

	BoxLayout:
		orientation: 'vertical'

		StackLayout:
			orientation: 'lr-tb'
			size_hint: 1, 0.1

			Spinner:
				size_hint:0.3,1
				id: id_algorithm
				text: "Select Algorithm"
				values: "LVCS-DVCS",""

			Spinner:
				size_hint:0.3,1
				id: id_parameters
				text: "Parameters"
				values: "(2,2)","(2,3)","(3,3)"
			
			Button:
				size_hint:0.3,1
				id: id_loadImageButton
				text: "Load secret"
				on_press: root.show_load()


		Image:
			id: id_secret_image
			size_hint:1,0.2
		Button:
			size_hint: 1, 0.1
			text: "Generate"
			on_press: root.generateShadows()
		
		BoxLayout:
			canvas:
				Color:
					rgba:1,0,0,1
				Rectangle:
					pos:self.pos
					size:self.size 
			
			orientation: 'vertical'
			size_hint:1,0.2

			Label:
				text: "All shadows result:"
				size_hint:1,0.2
			Image:
				id: id_result
				size_hint:1,0.8		

		ShadeLayout:
			id: id_shades
			size_hint:1,0.4
	

		
<LoadDialog>:
    filechooser: id_filechooser

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: id_filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(id_filechooser.path, id_filechooser.selection)
